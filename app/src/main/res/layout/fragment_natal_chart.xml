<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.astrolucis.R"/>
        <variable name="viewModel" type="com.astrolucis.features.natalChart.NatalChartViewModel"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="12dp"
                android:maxHeight="12dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:indeterminate="true"
                android:indeterminateTint="@color/gold"
                android:indeterminateTintMode="src_in"
                android:padding="0dp"
                android:layout_marginBottom="-5dp"
                android:layout_alignParentTop="true"
                app:visibilityGone="@{viewModel.loading.getValue()}"/>

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-6040563814771861/9916238532">
            </com.google.android.gms.ads.AdView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:layout_alignParentTop="true"
                android:layout_above="@id/adView"
                tools:listitem="@layout/card_explanation"/>

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>
